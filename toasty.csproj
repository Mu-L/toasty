<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0-windows10.0.22621.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <!-- Native AOT for fast startup and small binary -->
    <PublishAot>true</PublishAot>
    <SelfContained>true</SelfContained>

    <!-- Reduce binary size -->
    <InvariantGlobalization>true</InvariantGlobalization>
    <IlcOptimizationPreference>Size</IlcOptimizationPreference>

    <!-- CsWinRT source generator for AOT compatibility -->
    <CsWinRTAotOptimizerEnabled>true</CsWinRTAotOptimizerEnabled>

    <!-- Windows app manifest -->
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <!-- CsWinRT for AOT-compatible WinRT projection -->
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.2.*" />
  </ItemGroup>

</Project>
